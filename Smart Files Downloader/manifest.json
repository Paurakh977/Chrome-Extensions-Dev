{
  "manifest_version": 3,
  "name": "Smart Download Organizer",
  "version": "1.0",
  "description": "Automatically organizes downloads and Google Drive files based on file type. Helps users keep their files organized in both local downloads and Google Drive.",
  
  "permissions": [
    "downloads",
    "downloads.shelf",
    "system.display",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "<all_urls>"
  ],
  "oauth2": {
    "client_id": "521130360268-6h5jfebivs02t1u585rkkh5n1k1dujtk.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.metadata",
      "https://www.googleapis.com/auth/drive"
      
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
